page{
  height: 100%;
}
.cates{
  height: 100%;
}
.body_container{
  height: 100%;
  background-color:var(--themeColor);
}
.cates_container{
  /* height: calc( 100vh - 80rpx ); */
  height: 100%;
  display: flex;
  background-color: #f5f5f5;
  border-top-left-radius: 30rpx;
  border-top-right-radius: 30rpx;
}

.left_menu{
  margin-top: 40rpx;
  flex: 2;
}
.left_menu .active{
  color: var(--themeColor);
  border-left: 5rpx solid currentColor;
}
.left_menu .menu_item{
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
}

.right_menu{
  flex:4;
  margin-top: 40rpx;
  margin-bottom: 40rpx;
  background-color:#fff;
  border-radius: 30rpx;
}
.right_menu .product{
  display: flex;
}
.right_menu .product image{
  width: 150rpx;
  height: 150rpx;
  border-radius: 10rpx;
  margin-top: 30rpx;
  margin-left: 30rpx;
}
.right_menu .product .side_intro{
  margin-top: 30rpx;
  margin-left: 20rpx;
}
.right_menu .divLine{
  background-color: #ececec;
  width: 90%;
  height: 1rpx;
  margin: 0 auto;
  margin-top: 30rpx;
}